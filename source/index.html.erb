<div class="page-wrap clearfix">

  <section>
    <div class="clearfix">
      <div class="top-section welcome-section padded">
        <div class="grid-7 m-grid-half s-grid-whole" >
          <%= figure 'shortcut_engage_graphic', class: 'fluid' %> 
        </div>
        <div id="teaser" class="grid-5 m-grid-half s-grid-whole" >
          <h1>Engage Your Audience with <b>Shortcut Interactive Print</b></h1>
        </div>
      </div>
    </div>
  </section>
</div>

<div class="inset">
  <div class="page-wrap clearfix">
    <section>
      <div class="clearfix">

        <div class="download-instruction-section padded">
          <div class="grid-8 m-grid-whole s-grid-whole" >
            <div id="demo-button">
              <a href="#modal-download-instruction" class="rounded-batch" onclick="_gaq.push(['_trackPageview' ,'/scan-demo-flyer'])">
                Open <em>demo picture</em> here
              </a>
            </div>
            <div class="download-instruction">
              <div class="grid-whole stores">
                <div class="center">
                  <%= image_tag "instructions.png", alt: "Download instructions" %>
                </div>

                <div class="center store-buttons">
                  <a href="//itunes.apple.com/app/id364110253?mt=8" target="_blank">
                    <%= figure 'button_app_store' %> 
                  </a>
                  <a href="//play.google.com/store/apps/details?id=com.aqris.kooaba.paperboy" target="_blank">
                    <%= figure 'button_play_store' %> 
                  </a>
                  <a href="//www.windowsphone.com/s?appid=12f84623-7d1d-4d5a-82bb-72df700236c9" target="_blank">
                    <%= figure 'button_windows_store' %> 
                  </a>
                </div>

              </div>
            </div>
          </div>

          <div class="grid-4 m-grid-whole s-grid-whole">
            <%= partial 'teaser_phone' %>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>



<div class="page-wrap clearfix info-boxes">

  <section>
    <div class="clearfix">
      <div class="info-box-container">
        <% info_box(class: 'third color-scheme-1') do %>
          <aside>
            <%= figure 'info_graphic_how_shortcut_works' %> 
          </aside>
          <article class="centered">
            <div>
              <h2>Interactive Print Made Easy</h2>
              <p>
                Shortcut makes your print <em>clickable</em> and <em>interactive</em>. 
                No gimmicks. Just simple and easy-to-use 
                Shortcut to all your content!
              </p>
              <p><a href="signup.html" class="button">Try it now!</a></p>
            </div>
          </article>
        <%- end %>
      </div>
    </div>
  </section>

  <section>
    <div class="clearfix">
      <div class="info-box-container">
        <% info_box(class: 'third info-left color-scheme-2') do %>
          <aside>
            <%= figure 'info_graphic_save_time' %> 
          </aside>
          <article class="centered">
            <div>
              <h2>Save Time and Money</h2>
              <p>
                Whether you are a publisher, editor, brand owner 
                or retailer, Shortcut is the most cost-efficient 
                engagement platform for interactive print. 
                No upfront set-up costs but fast and easy-to-use solution.
              </p>
              <p><a href="#modal-manager-intro-video" class="button" onclick="_gaq.push(['_trackPageview' ,'/manager-intro-video'])">Watch Video!</a></p>
            </div>
          </article>
        <%- end %>
      </div>
    </div>
  </section>

  <section>
    <div class="clearfix">
      <div class="info-box-container">
        <% info_box(class: 'third color-scheme-3') do %>
          <aside>
            <%= figure 'info_graphic_one_solution' %> 
          </aside>
          <article class="centered">
            <div>
              <h2>One solution - multiple businesses</h2>
              <p>
                Shortcut provides benefits across all sectors whether 
                it is publisher, retail, fashion, education, travel and 
                much more. <a href="signup.html">Try a demo today</a> 
                and see how easy your Shortcut can be created.  
              </p>
              <p><a href="#modal-manager-intro-video" class="button" onclick="_gaq.push(['_trackPageview' ,'/manager-intro-video'])">Watch Video!</a></p>
            </div>
          </article>
        <%- end %>
      </div>
    </div>
  </section>

  <section>
    <div class="clearfix">
      <div class="info-box-container">
        <% info_box(class: 'third info-left color-scheme-1') do %>
          <aside>
            <%= figure 'info_graphic_purchaising_decisions' %> 
          </aside>
          <article class="centered">
            <div>
              <h2>The Shortcut to your customers’ purchasing decisions</h2>
              <p>
                Shortcut offers brand owners and publishers the ability to 
                offer shopping direct from the printed page. Imagine that 
                fashion spread detailing the latest trends and buys – your 
                readers become your customers within seconds.
              </p>
              <p><a href="signup.html" class="button">Try it now!</a></p>
            </div>
          </article>
        <%- end %>
      </div>
    </div>
  </section>

  <section>
    <div class="clearfix">
      <div class="info-box-container">
        <% info_box(class: 'third color-scheme-2') do %>
          <aside>
            <%= figure 'info_graphic_measure' %> 
          </aside>
          <article class="centered">
            <div>
              <h2>Measure the results achieved</h2>
              <p>
                All Shortcuts are fully measurable with Shortcut Manager.
              </p>
              <p><a href="signup.html" class="button">Try it now!</a></p>
            </div>
          </article>
        <%- end %>
      </div>
    </div>
  </section>

  <%= partial 'used_worldwide' %>
</div>

<% modal_view id: 'modal-download-instruction' do %>
  <div class="demo-pic-container">
    <%= image_tag "shortcut_poster_portrait.png", alt: "Shortcut Demo Picture" %>
  </div>
<%- end %>

<% modal_view id: 'modal-teaser-video' do %>
  <%= youtube_player id: 'teaser-video', src: 'https://www.youtube.com/embed/RPpV_dELuBw' %>
<%- end %>

<% modal_view id: 'modal-manager-intro-video' do %>
  <%= youtube_player id: 'manager-intro-video', src: 'https://www.youtube.com/embed/fm4CoT_xH1Y' %>
<%- end %>

