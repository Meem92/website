---
title: Contact Us
---

<div class="page-wrap clearfix">
  <%= partial "header" %> 
</div>

<div class="page-wrap clearfix info-boxes">

  <section>
    <header><h3><%= current_page.data.title  %></h3></header>
    <div class="clearfix">
      <div class="info-box-container">
        <% info_box(class: 'color-scheme-2') do %>
          <article>
            <% form_tag 'javascript:void', class: 'contact-form', method: 'post' do %>
              <% field_set_tag do %>
                <p>
                  <%= text_field_tag :name, placeholder: 'Your Name*', id: 'contact-form_name', required: true %>
                </p>
                <p>
                  <%= email_field_tag :email, placeholder: 'Your Email*', id: 'contact-form_email',required: true %>
                </p>
                <p>
                  <%= text_field_tag :subject, placeholder: 'Subject', id: 'contact-form_subject'%>
                </p>
                <p>
                  <%= text_area_tag :message, placeholder: 'Message', id: 'contact-form_message'%>
                </p>
              <% end %>
              <% field_set_tag(:class => 'buttons') do %>
                <%= submit_tag "Send!" %>
                <p class="success" style="display:none;">Thanks! We'll get back to you shortly.</p>
                <p class="validation error" style="display:none;">Something went wrong. Please have a closer look.</p>
              <% end %>
            <% end %>

          </article>
        <%- end %>
      </div>
    </div>
  </section>

  <section>
    <div class="clearfix">
      <div class="info-box-container">
        <% info_box(class: 'color-scheme-3') do %>
          <article>
            <h2>Newsletter</h2>
            <p>We will keep you up to date with latest news and cases.</p>
            <% form_tag 'http://shortcutmedia.us5.list-manage.com/subscribe/post?u=740414b556da9e032d9a2d94a&amp;id=fe60f61975', class: 'newsletter-form', method: 'post', target: '_blank' do %>
              <% field_set_tag do %>
                <p>
                  <%= email_field_tag 'EMAIL', placeholder: 'Subscribe with your Email', required: true %>
                  <%= submit_tag "Go!" %>
                </p>
                <small>
                  We don't spam, and you can unsubscribe any time.
                </small>
              <% end %>
            <% end %>
          </article>
        <%- end %>
      </div>
    </div>
  </section>

