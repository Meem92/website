---
title: Contact Us - Shortcut
---

<div class="page-wrap clearfix">
  <%= partial "header" %> 
</div>

<div class="page-wrap clearfix info-boxes">

  <section>
    <div class="clearfix">
      <div class="grid-10 offset-1">
        <h1>Contact Us</h1>
        <% info_box_flex(class: 'color-scheme-2 box-padded') do %>
          <article>
            <% form_tag '/don-tknow-yet', class: 'contact-form', method: 'post' do %>
              <% field_set_tag do %>
                <p>
                  <%= label_tag :name %>
                  <%= text_field_tag :name %>
                </p>
                <p>
                  <%= label_tag :email %>
                  <%= email_field_tag :email %>
                </p>
                <p>
                  <%= label_tag :subject %>
                  <%= text_field_tag :subject %>
                </p>
                <p>
                  <%= label_tag :message %>
                  <%= text_area_tag :message %>
                </p>
              <% end %>
              <% field_set_tag(:class => 'buttons') do %>
                <%= submit_tag "Send" %>
              <% end %>
            <% end %>

          </article>
        <%- end %>
      </div>
    </div>
  </section>



<%= partial 'footer' %>
